<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SIGNUP</title>
    <!-- Header CSS -->
    <link rel="stylesheet" href="css/header.css">
    <!-- Lottie Files -->
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
    <!-- Jquery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <!-- FONT AWESOME -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
    <!-- Page style -->
    <link rel="stylesheet" href="css/signup.css">
    <link rel="icon" href="/raw/logo.png" type="image/x-icon">

</head>

<body>
    <!-- For PreLoader -->
    <script>
        $(window).on('load', setTimeout(function () {
            $(".preloader").fadeOut(1000);
            $(".content_page").fadeIn(1000);
        }, 1000));
    </script>

    {{#if session.user}}
        <script>location.replace('/');</script>
    {{else if session.admin}}
        <script>location.replace('/');</script>
    {{/if}}

    <div class="preloader">
        <lottie-player src="lottie/loading.json" background="transparent" speed="2.5" style="width: 50px; height: 50px;"
            loop autoplay>
        </lottie-player>
    </div>

    <section class="content_page">

        <!-- Floater -->
        <div class="floater">
            <div>
                <i class="fa-solid fa-headset"></i>
            </div>
        </div>

        <div class="message_landing_page">
            <h3>We're open and available for takeaway & delivery. <a href="buy.html">Order Now</a></h3>
        </div>

        <!-- HEADER-->
        <header>
            <nav>
                <div class="icons">
                    <img src="raw/logo.png" alt="" width="50px" height="53px">
                    <h3 style="font-weight: 500; padding-top: 5px;"> &nbsp;&nbsp;Tracker</h3>
                </div>
                <ul>
                    <li><a href="/">HOME</a></li>
                    <li><a href="/login">LOGIN</a></li>
                </ul>
            </nav>
        </header>


        <div class="signup">

            <div class="insider">

                <div class="signup_first">
                    <h1 style="text-align: center; letter-spacing: 2px; margin: 2px;"> <i class="fa-solid fa-right-to-bracket"></i> Hello Friend !</h1>
                    <lottie-player src="https://assets1.lottiefiles.com/packages/lf20_zvcyhdqv.json" background="transparent" speed="1" style="width: 220px; height: 220px; position: relative;" loop
                    autoplay></lottie-player>
                    <p style="width: 250px; text-align: justify;">Join our community and be a part of something great.Sign up now and gain access to exclusive content and features...</p>
                </div>

                <div class="signup_second">

                    <h2>Signup</h2>
                    <hr>

                    <div>
                        <form action="/otp" onsubmit="return validate()" method="post">
                            <div class="input_class"><input type="text" name="signup_name" id="signup_name" placeholder="Name" ></div>
                            <div class="input_class"><input type="email" name="signup_email" id="signup_email" placeholder="Email" ></div>
                            <div class="input_class"><input type="number" name="signup_number" id="signup_number" placeholder="Mobile Number" ></div>
                            <div class="input_class"><input type="password" name="signup_pass" id="signup_pass" placeholder="Password" ></div>
                            <div class="input_class"><input type="password" name="signup_repass" id="signup_repass" placeholder="Re-Password" ></div>
                            <div class="input_checkbox"><input type="checkbox" name="checkbox" id="checkbox" onclick="show_pass()"> <p>show password</p> </div>
                            <button type="submit" id="signup_button">Signup</button>
                        </form>
                    </div>

                </div>

            </div>

        </div>

        <div id="message">
            <h4>&nbsp;&nbsp;&nbsp;Message !</h4><hr>
            <p id="message_placeholder"></p>
            <div>
                <button onclick="disable_message()">OK</button>
            </div>
        </div>


    </section>


    <!-- Page Script -->
    <script type="text/javascript" src="js/signup.js"></script>

    {{#if msg}}
        <script>show_message('{{msg}}');</script>
    {{/if}}


</body>

</html>