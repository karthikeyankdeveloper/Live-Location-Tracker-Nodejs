<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logout</title>
    <!-- Header CSS -->
    <link rel="stylesheet" href="css/header.css">
    <!-- Lottie Files -->
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
    <!-- Jquery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

    <style>
        #center_it {
            width: 300px;
            height: 200px;
            position: absolute;
            top: 0px;
            bottom: 0px;
            left: 0px;
            right: 0px;
            margin: auto;
            text-align: center;
            display: flex;
            align-items: center;
        }
        #center_it div{
            width: 100%;
        }
        #center_it div button{
            cursor: pointer;
            padding: 5px 10px;
            background-color: green;
            border: none;
            border-radius: 5px;
            color: white;
        }
        #logout_anchor a{
            pointer-events: none;
            color: white;
            padding: 8px 15px;
            background-color: #1a9681;
        }
    </style>
</head>
<body>

    <!-- For PreLoader -->

    <div class="preloader">
        <lottie-player src="/lottie/loading.json" background="transparent" speed="2.5" style="width: 50px; height: 50px;"
            loop autoplay>
        </lottie-player>
    </div>


    <section class="content_page">

        <!-- Floater -->
        <div class="floater">
            <div>
                <i class="fa-solid fa-headset"></i>
            </div>
        </div>

        <div class="message_landing_page">
            <h3>We're open and available for takeaway & delivery. <a href="buy.html">Order Now</a></h3>
        </div>


        <!-- HEADER-->
        <header>
            <nav>
                <div class="icons">
                    <img src="raw/logo.png" alt="" width="50px" height="53px">
                    <h3 style="font-weight: 500; padding-top: 5px;"> &nbsp;&nbsp;Tracker</h3>
                </div>
                <ul>
                    <li><a href="/">HOME</a></li>
                    {{#if session.user}}
                        <li id="dashboard_user_anchor"><a href="#">DASHBOARD(User)</a></li> 
                    {{else if session.admin}}
                        <li id="dashboard_admin_anchor"><a href="#">DASHBOARD(Admin)</a></li>
                    {{else}}
                        <script>location.replace('/');</script>
                    {{/if}} 
                    <li id="logout_anchor"><a>LOGOUT</a></li>
                </ul>
            </nav>
        </header>

        <div id="center_it">
            <div>
                {{#if session.user}}
                    <p id="you_login">You are logged in as user !</p>
                {{else if session.admin}}
                    <p id="you_login">You are logged in as admin !</p>
                {{/if}} 
        
                <form action="/addlogout">
                    <button type="submit" id="btn_logout">LOGOUT</button>
                </form>
                
            </div>
        </div>
    </section>


    <script>
        $(window).on('load', setTimeout(function () {
            $(".preloader").fadeOut(1000);
            $(".content_page").fadeIn(1000);
        }, 1500))
    </script>
    
</body>
</html>