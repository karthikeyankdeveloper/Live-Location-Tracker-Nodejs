<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DashBoard</title>
    <!-- Header CSS -->
    <link rel="stylesheet" href="css/header.css">
    <!-- Lottie Files -->
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
    <!-- Jquery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
</head>
<body>

    <!-- For PreLoader -->

    <div class="preloader">
        <lottie-player src="lottie/loading.json" background="transparent" speed="2.5" style="width: 50px; height: 50px;"
            loop autoplay>
        </lottie-player>
    </div>


    <!-- Main Content-->
    <section class="content_page">
        <!-- Floater -->
        <div class="floater">
            <div>
                <i class="fa-solid fa-headset"></i>
            </div>
        </div>

        <div class="message_landing_page">
            <h3>We're open and available for takeaway & delivery. <a href="buy.html">Order Now</a></h3>
        </div>


        <!-- HEADER-->
        <header>
            <nav>
                <div class="icons">
                    <img src="raw/logo.png" alt="" width="50px" height="53px">
                    <h3 style="font-weight: 500; padding-top: 5px;"> &nbsp;&nbsp;Tracker</h3>
                </div>
                <ul>
                    <li><a href="/">HOME</a></li>
                    {{#if session.admin}}
                        <li id="dashboard_admin_anchor"><a class="active">DASHBOARD(Admin)</a></li>
                        <li id="logout_anchor"><a href="/logout">LOGOUT</a></li>
                    {{else}}
                        <script> location.replace("/"); </script>
                    {{/if}} 
                </ul>
            </nav>
        </header>


        <style>
            
            table,th,td{
                border: 1px solid black;
                border-collapse: collapse;
                border-radius: 50px;
            }
            th,td{
                text-align: center;
                padding: 10px 15px;
            }

            .leftappply{
                margin-top: 50px;
                margin-left: 50px;
            }

        </style>

<div class="leftappply">



        <table>
                <tr>
                    <th>NAME</th>
                    <th>EMAIL</th>
                    <th>PHONE</th>
                    <th>ROLE</th>
                </tr>

                {{#each data}}
                    <tr>
                        <td>{{NAME}}</td>
                        <td>{{EMAIL}}</td>
                        <td>{{MOBILE}}</td>
                        <td>{{ROLE}}</td>
                    </tr>
                {{/each}}


        </table>

        </div>


        





        {{!-- <h3>Hello{{data.EMAIL}}</h3> --}}



        <div class="extra_for_mobile"></div>



    </section>


    <script>
        $(window).on('load', setTimeout(function () {
            $(".preloader").fadeOut(1000);
            $(".content_page").fadeIn(1000);
        }, 2000))
    </script>
    
</body>
</html>